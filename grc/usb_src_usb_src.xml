<?xml version="1.0"?>
<!--
###################################################
##Virtual Channel Formatter
###################################################
 -->
<block>
    <name>usb_src</name>
    <key>usb_src</key>
    <import>import usb_src</import>
    <make>usb_src.usb_src($device,$parity,$baudrate,$stopbits,$bytesize,$waitfornewline)</make>
    <param>
        <name>Device Path</name>
        <key>device</key>
        <type>string</type>
    </param>
    <param>
        <name>Stop Bits</name>
        <key>stopbits</key>
        <type>int</type>
        <option>
			<name>ONE</name>
			<key>1</key>
		</option>
        <option>
			<name>TWO</name>
			<key>2</key>
		</option>
    </param>
    <param>
    <name>Parity</name>
        <key>parity</key>
        <type>int</type>
        <option>
			<name>NONE</name>
			<key>0</key>
		</option>
        <option>
			<name>EVEN</name>
			<key>1</key>
		</option>
        <option>
			<name>ODD</name>
			<key>2</key>
		</option>
    </param>
    <param>
    <name>Byte Size</name>
        <key>bytesize</key>
        <type>int</type>
        <option>
			<name>7</name>
			<key>7</key>
		</option>
        <option>
			<name>8</name>
			<key>8</key>
        </option>
    </param>
    <param>
    <name>Wait For New Line?</name>
        <key>waitfornewline</key>
        <type>bool</type>
        <option>
			<name>Yes</name>
			<key>True</key>
		</option>
        <option>
			<name>No</name>
			<key>False</key>
        </option>
    </param>
    <param>
        <name>Buad Rate</name>
        <key>baudrate</key>
        <type>int</type>
    </param>
    <!--    
    <sink>
        <name>to_serial</name>
        <type></type>
    </sink>
    -->
    <source>
        <name>from_serial</name>
        <type></type>
    </source>

 
</block>
